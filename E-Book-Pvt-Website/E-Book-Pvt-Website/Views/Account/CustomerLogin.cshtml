@model E_Book_Pvt_Website.Models.CustomerLoginModal

@{
    ViewData["Title"] = "CustomerLogin";
}

<form asp-action="CustomerLogin" method="post">
    <div class="container">
        <h3>
            <label>Login :)</label>
        </h3>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" class="form-control" />
            <button class="btn btn-link">Forgot Password?</button>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Login</button>
        <p class="text-danger">Don't have an account yet? Sign Up Here.</p>
    </div>
</form>